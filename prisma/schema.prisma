generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Domain {
  id     String  @id @unique
  status String?
}

model Team {
  id          String  @id @unique
  displayName String?
  description String?
  visibility  String?
  members     User[]  @relation("TeamMembers")
  owners      User[]  @relation("TeamOwners")
}

model Configuration {
  id           Int      @id @default(autoincrement())
  tenantId     String
  clientId     String
  clientSecret String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ScanLog {
  id          Int       @id @default(autoincrement())
  dataType    String   @unique
  status      String
  startedAt   DateTime?
  completedAt DateTime?
  error       String?
  nextLink    String?
}

model User {
  id                String      @id @unique
  displayName       String?
  userPrincipalName String?
  accountEnabled    Boolean?
  department        String?
  jobTitle          String?
  memberOfGroups    M365Group[] @relation("GroupMembers")
  ownerOfGroups     M365Group[] @relation("GroupOwners")
  memberOfTeams     Team[]      @relation("TeamMembers")
  ownerOfTeams      Team[]      @relation("TeamOwners")
}

model M365Group {
  id           String  @id @unique
  displayName  String?
  mailNickname String?
  memberCount  Int?
  visibility   String?
  members      User[]  @relation("GroupMembers")
  owners       User[]  @relation("GroupOwners")
}

model SecurityGroup {
  id                  String  @id @unique
  displayName         String?
  isDistributionGroup Boolean
  memberCount         Int?
}

model SharePointSite {
  id                String    @id @unique
  name              String?
  url               String?
  teams             String?
  channelSite       Boolean?
  storageUsed       Float?
  hub               String?
  template          String?
  lastActivity      DateTime?
  dateCreated       DateTime?
  storageLimit      Float?
  storageUsedPct    Float?
  m365Group         String?
  filesViewedEdited Int?
  pageViews         Int?
  pageVisits        Int?
  filesCount        Int?
  sensitivity       String?
  externalSharing   String?
}

model OneDrive {
  id        String   @id @unique
  ownerId   String?
  ownerName String?
  siteName  String?
  siteUrl   String?
  size      Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model License {
  id             String   @id @unique
  skuPartNumber  String
  displayName    String?
  status         String?
  totalSeats     Int?
  consumedSeats  Int?
  availableSeats Int?
  prepaidUnits   Int?
  warningUnits   Int?
  suspendedUnits Int?
  assignedUnits  Int?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model SharePointSiteUsageDetail {
  id                     String   @id @unique
  siteId                 String?
  siteUrl                String?
  ownerDisplayName       String?
  isDeleted              Boolean?
  lastActivityDate       DateTime?
  fileCount              Int?
  activeFileCount        Int?
  pageViewCount          Int?
  visitedPageCount       Int?
  storageUsedBytes       BigInt?
  storageAllocatedBytes  BigInt?
  rootWebTemplate        String?
  ownerPrincipalName     String?
  reportPeriod           String?
  reportRefreshDate      DateTime?
  siteName               String?
}
